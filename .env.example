# MESILSAN Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MySQL Configuration (Primary database)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=mesilsan_db
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_mysql_password_here

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Security - IMPORTANT: Change this for production!
SECRET_KEY=tu_clave_secreta_muy_segura_cambiar_en_produccion

# Debug mode (true/false)
DEBUG=true

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================
# UPLOAD CONFIGURATION
# ==============================================

# Maximum file upload size in bytes (default: 16MB)
MAX_CONTENT_LENGTH=16777216

# ==============================================
# EXTERNAL SERVICES (if applicable)
# ==============================================

# Add any external service configurations here
# API_KEY=your_api_key_here
# EXTERNAL_SERVICE_URL=https://api.example.com

# ==============================================
# PRODUCTION ONLY SETTINGS
# ==============================================
# Uncomment and configure for production deployment

# FLASK_ENV=production
# DEBUG=false
# SECRET_KEY=super_secure_production_key_here
# MYSQL_HOST=production_mysql_server
# SSL_DISABLE=false